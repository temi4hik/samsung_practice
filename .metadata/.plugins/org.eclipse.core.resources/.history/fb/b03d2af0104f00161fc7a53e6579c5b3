	try {
		if (tizen.bluetooth === undefined) {
			alert("No bluetooth")
		}
	}
}());

function toggleBluetooth() {
	
	if ($("#bluetooth-slider").val() == "on") {
		BTpowerOn();
	} else {
		BTpowerOff();
	}
}


function singleVibro() {
	navigator.vibrate(2000);
}

function multiVibro() {
	
	navigator.vibrate([2000, 1000, 500, 1500, 3000]);
}

function stopVibro() {
	
	navigator.vibrate(0);
}

(function(){
	
}());

function toggleBluetooth() {
	
	if ($("#bluetooth-slider").val() == "on") {
		BTpowerOn();
	} else {
		BTpowerOff();
	}
}